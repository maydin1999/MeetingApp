@model MeetingInfo
@{
    ViewBag.Title = "Home";
    Layout = "_Layout2";
}
<main class="text-center">
    <h1 class="h4">@ViewBag.HourCheck</h1>
    <p>Please indicate your participation in the meeting</p>
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Konum : @Model.Location</li>
            <li class="list-group-item">Tarih : @Model.Date.ToString("dd/MM/yyyy HH:mm")</li>
            <li class="list-group-item">@Model.NumberOfPeople</li>
        </ul>
    </div>
    <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Apply</a>
</main>

